<h1>Posts#new</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@post.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f|%>
<%= f.label :title%>
<%= f.text_field :title%>
<%= f.label :content%>
 <%= f.text_area :content %>
 <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
 <%= f.collection_select :destination_id, Destination.all, :id, :name %>
  <%= f.submit %>
<% end %>
